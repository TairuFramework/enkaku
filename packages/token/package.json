{
  "name": "@enkaku/token",
  "version": "0.6.4",
  "license": "MIT",
  "homepage": "https://enkaku.dev",
  "description": "JWT signing and verification for Enkaku RPC",
  "keywords": ["json", "web", "token", "jwt", "signature"],
  "repository": {
    "type": "git",
    "url": "https://github.com/TairuFramework/enkaku",
    "directory": "packages/token"
  },
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": ["lib/*"],
  "sideEffects": false,
  "scripts": {
    "start": "tsx ./src/run.ts",
    "build:clean": "del lib",
    "build:js": "swc src -d ./lib --config-file ../../swc.json --strip-leading-paths",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build:types:ci": "tsc --emitDeclarationOnly --declarationMap false",
    "build": "pnpm run build:clean && pnpm run build:js && pnpm run build:types",
    "test:types": "tsc --noEmit",
    "test:unit": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test": "pnpm run test:types && pnpm run test:unit",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@enkaku/codec": "workspace:^",
    "@enkaku/schema": "workspace:^",
    "@noble/curves": "^1.7.0",
    "@noble/hashes": "^1.6.1",
    "@scure/base": "^1.2.1"
  },
  "devDependencies": {
    "uint8arrays": "^5.1.0"
  }
}
