{
  "$schema": "https://typedoc-plugin-markdown.org/schema.json",
  "extends": ["../tsconfig.build.json"],
  "include": ["../packages/*/src"],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["DOM", "ES2020"],
    "skipLibCheck": true
  },
  "typedocOptions": {
    "name": "Enkaku APIs",
    "entryPoints": [
      "../packages/async",
      "../packages/browser-keystore",
      "../packages/capability",
      "../packages/client",
      "../packages/codec",
      "../packages/event",
      "../packages/expo-keystore",
      "../packages/generator",
      "../packages/http-client-transport",
      "../packages/http-server-transport",
      "../packages/message-transport",
      "../packages/node-keystore",
      "../packages/node-streams-transport",
      "../packages/protocol",
      "../packages/schema",
      "../packages/server",
      "../packages/socket-transport",
      "../packages/standalone",
      "../packages/stream",
      "../packages/token",
      "../packages/transport"
    ],
    "entryPointStrategy": "packages",
    "packageOptions": {
      "disableSources": true,
      "skipErrorChecking": true,
      "entryFileName": "index",
      "entryPoints": ["src/index.ts"],
      "excludeExternals": true,
      "excludeInternal": true,
      "readme": "none"
    },
    "plugin": ["typedoc-plugin-markdown"],
    "out": "docs/api",
    "readme": "none",
    "entryFileName": "index",
    "excludeScopesInPaths": true,
    "membersWithOwnFile": [],
    "hideBreadcrumbs": true,
    "hidePageHeader": true
  }
}
